<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.muzik.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist"
            style="@style/section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/mybutton"
            android:text="@string/playlist" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/eminem"
                style="@style/cover_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ross"
                style="@style/cover_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/nas"
                style="@style/cover_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/top_songs"
            style="@style/section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:text="@string/top_songs" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/drake_one"
                style="@style/cover_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/gambino"
                style="@style/cover_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/cardi"
                style="@style/cover_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart" />

        </LinearLayout>

        <TextView
            android:id="@+id/fav_songs"
            style="@style/section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:text="@string/your_songs" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/gorillaz_h"
                style="@style/cover_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/stripes"
                style="@style/cover_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/keyes"
                style="@style/cover_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/repeat"
                style="@style/menu_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />


            <ImageView
                android:id="@+id/backward"
                style="@style/menu_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />


            <ImageView
                android:id="@+id/play"
                style="@style/menu_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/forward"
                style="@style/menu_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />


            <ImageView
                android:id="@+id/shuffle"
                style="@style/menu_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>